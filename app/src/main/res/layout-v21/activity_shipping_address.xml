<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShippingAddress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">





        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/address_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Region e.g. central"
            android:inputType="textCapWords"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextSize="8dp"
            app:met_iconPadding="0dp"
            app:met_primaryColor="#2196F3"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="#757575" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="City"
            android:inputType="textCapWords"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextSize="8dp"
            app:met_iconPadding="0dp"
            app:met_primaryColor="#2196F3"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="#757575" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/address_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Address"
            android:inputType="textCapWords"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextSize="8dp"
            app:met_iconPadding="0dp"
            app:met_primaryColor="#2196F3"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="#757575" />



        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:background="#42A5F5"
            android:text="@string/done"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

</ScrollView>